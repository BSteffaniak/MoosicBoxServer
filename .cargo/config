[alias]
"server:debug" = "run --manifest-path=server/Cargo.toml"
"server:release" = "run --manifest-path=server/Cargo.toml --release"
server = "server:release"
"server:debug:cpal" = "run --manifest-path=server/Cargo.toml --features=cpal"
"server:cpal" = "run --manifest-path=server/Cargo.toml --release --features=cpal"
"server:debug:pulseaudio-standard" = "run --manifest-path=server/Cargo.toml --features=pulseaudio-standard"
"server:pulseaudio-standard" = "run --manifest-path=server/Cargo.toml --release --features=pulseaudio-standard"
"server:debug:pulseaudio-simple" = "run --manifest-path=server/Cargo.toml --features=pulseaudio-simple"
"server:pulseaudio-simple" = "run --manifest-path=server/Cargo.toml --release --features=pulseaudio-simple"

"tunnel-server:debug" = "run --manifest-path=tunnel_server/Cargo.toml"
"tunnel-server:release" = "run --manifest-path=tunnel_server/Cargo.toml --release"
tunnel-server = "tunnel-server:release"

[env]
RUST_LOG = "info"

[http]
timeout = 1000000

[net]
git-fetch-with-cli = true
