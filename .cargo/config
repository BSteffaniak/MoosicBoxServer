[alias]
server                             = "server:release"
"server:cpal"                      = "run --manifest-path=server/Cargo.toml --release --no-default-features --features=cpal,aac,flac,mp3,opus"
"server:debug"                     = "server:debug:cpal"
"server:debug:cpal"                = "run --manifest-path=server/Cargo.toml --no-default-features --features=cpal,aac,flac,mp3,opus"
"server:debug:pulseaudio-simple"   = "run --manifest-path=server/Cargo.toml --no-default-features --features=pulseaudio-simple,aac,flac,mp3,opus"
"server:debug:pulseaudio-standard" = "run --manifest-path=server/Cargo.toml --no-default-features --features=pulseaudio-standard,aac,flac,mp3,opus"
"server:pulseaudio-simple"         = "run --manifest-path=server/Cargo.toml --release --no-default-features --features=pulseaudio-simple,aac,flac,mp3,opus"
"server:pulseaudio-standard"       = "run --manifest-path=server/Cargo.toml --release --no-default-features --features=pulseaudio-standard,aac,flac,mp3,opus"
"server:release"                   = "server:cpal"

tunnel-server           = "tunnel-server:release"
"tunnel-server:debug"   = "run --manifest-path=tunnel_server/Cargo.toml"
"tunnel-server:release" = "run --manifest-path=tunnel_server/Cargo.toml --release"

[env]
RUST_LOG = "info"

[http]
timeout = 1000000

[net]
git-fetch-with-cli = true
