{
    "name": "@gigachad/vanilla-js",
    "description": "GigaChad VanillaJS Library",
    "version": "0.1.0",
    "main": "index.js",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/MoosicBox/MoosicBox.git"
    },
    "author": "Braden Steffaniak",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/MoosicBox/MoosicBox/issues"
    },
    "homepage": "https://github.com/MoosicBox/MoosicBox#readme",
    "scripts": {
        "build": "tsc",
        "bundle": "esbuild dist/index.js --minify --bundle --outfile=dist/index.min.js",
        "build_and_bundle": "pnpm build && pnpm bundle",
        "pretty": "prettier --check \"**/*.{js,cjs,mjs,jsx,ts,tsx}\"",
        "pretty:write": "prettier --write \"**/*.{js,cjs,mjs,jsx,ts,tsx}\"",
        "lint": "eslint src",
        "lint:write": "eslint src --fix",
        "typecheck": "tsc --noEmit",
        "validate": "pnpm pretty && pnpm lint && pnpm typecheck"
    },
    "type": "module",
    "devDependencies": {
        "@eslint/eslintrc": "^3.2.0",
        "@eslint/js": "^9.20.0",
        "@tsconfig/node18": "18.2.2",
        "@typescript-eslint/eslint-plugin": "^8.23.0",
        "@typescript-eslint/parser": "^8.23.0",
        "esbuild": "^0.25.0",
        "eslint": "^9.20.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-node": "^11.1.0",
        "prettier": "^3.4.2",
        "typescript": "^5.7.3"
    }
}
